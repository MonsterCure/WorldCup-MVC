@using WorldCup.Web.Extensions
@model WorldCup.Entities.Match

@{
    ViewBag.Title = "Delete match";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete match</h2>
<hr />
<h3>Are you sure you want to delete this match?</h3>
<br />
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-primary" })
        </div>
    }
</div>
<hr />
<div class="list-group" style="display: flex;
    flex-direction: column;">
    <div class="list-group-item list-group-item align-items-lg-start" style="display: flex;
    align-items: center;">
        <div class="justify-content-start" style="    -webkit-box-ordinal-group: 1; -moz-box-ordinal-group: 1; -ms-flex-order: 1; order: 1; -webkit-box-flex: 1; -moz-box-flex: 1; width: 15%; -webkit-flex: 0 0 15%; -ms-flex: 0 0 15%; flex: 0 0 15%; position: static;">
            @if (Model.MatchType == WorldCup.Entities.MatchType.GroupMatch)
            {
                <small class="badge badge-primary" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            @if (Model.MatchType == WorldCup.Entities.MatchType.RoundOf16)
            {
                <small class="badge badge-info" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            @if (Model.MatchType == WorldCup.Entities.MatchType.QuarterFinal)
            {
                <small class="badge badge-success" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            @if (Model.MatchType == WorldCup.Entities.MatchType.SemiFinal)
            {
                <small class="badge badge-warning" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            @if (Model.MatchType == WorldCup.Entities.MatchType.ThirdPlace)
            {
                <small class="badge badge-light" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            @if (Model.MatchType == WorldCup.Entities.MatchType.Final)
            {
                <small class="badge badge-danger" style="font-size: 12px;">@Html.DisplayFor(model => model.MatchType)</small>
            }
            <br />
            <br />
            <small class="" style="font-size: 14px;">@Html.DisplayFor(model => model.MatchTime)</small>
            <br />
            <small class="" style="font-size: 12px;">@Extensions.GetDisplayName(Model.StadiumLocation)</small>
        </div>
        <div class="justify-content-center" style="-webkit-box-ordinal-group: 2; -moz-box-ordinal-group: 2; -ms-flex-order: 2; order: 2; -webkit-box-flex: 2; -moz-box-flex: 2; width: 70%; -webkit-flex: 0 0 70%; -ms-flex: 0 0 70%; flex: 0 0 70%; display: flex;">
            <div style="text-align: right; flex: 0 0 43%; order: 1; flex-direction: row-reverse; display: flex; align-items: center; direction: ltr;">
                @if (Model.Team1Id != null)
                {
                    <h3 class="mb-1">@Html.DisplayFor(model => model.Team1.Name) <img style="height: 30px; width: auto; display: inline-block;" src="@Model.Team1.FlagUrl" alt="Picture of @Model.Team1.Name"></h3>
                }
                else
                {
                    <h3 class="mb-1">Team One</h3>
                }
            </div>
            <div style="flex: 0 0 14%; order: 2; align-items: center; text-align: center; white-space: nowrap;">
                <span style="font-size: 32px;">@Html.DisplayFor(model => model.ScoreTeam1) : @Html.DisplayFor(model => model.ScoreTeam2)</span>
            </div>
            <div style="text-align: left; flex: 0 0 43%; order: 3; flex-direction: row; display: flex; align-items: center; direction: ltr;">
                @if (Model.Team2Id != null)
                {
                    <h3 class="mb-1"><img style="height: 30px; width: auto; display: inline-block;" src="@Model.Team2.FlagUrl" alt="Picture of @Model.Team2.Name"> @Html.DisplayFor(model => model.Team2.Name)</h3>
                }
                else
                {
                    <h3 class="mb-1">Team Two</h3>
                }
            </div>
        </div>
        <div class="justify-content-end" style="position: static; -webkit-box-ordinal-group: 3; -moz-box-ordinal-group: 3; -ms-flex-order: 3; order: 3; -webkit-box-flex: 3; -moz-box-flex: 3; width: 15%; -webkit-flex: 0 0 15%; -ms-flex: 0 0 15%; flex: 0 0 15%;">
            
        </div>
    </div>
</div>