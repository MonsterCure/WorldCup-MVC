@model IEnumerable<WorldCup.Entities.Team>

@using (Ajax.BeginForm(
    "GroupsPartialView",
    "Teams",
    new AjaxOptions
    {
        InsertionMode = InsertionMode.ReplaceWith,
        HttpMethod = "GET",
        LoadingElementId = "ajax-loader",
        UpdateTargetId = "groups"
    }))
{
    <div style="display: inline-block; float: left; margin: 0px 30px;">
        <img id="ajax-loader" src="~/Content/Images/ajax-loader.gif" style="display:none" />
        <div class="form-group" style="width: 300px; display: flex; align-items: center;">
            <label for="groupView" style="display: inline-block; margin: 0 10px;">Choose a group:</label>
            <select id="groupView" class="form-control" name="group" style="display: inline-block; width: 80px; margin: 0 10px;">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
                <option value="H">H</option>
            </select>
            <input type="submit" value="Done" class="btn btn-outline-primary" style="display: inline-block; margin: 0 10px;" />
        </div>
    </div>
}