@using WorldCup.Entities;
@using (Ajax.BeginForm(
    "SearchByGroup",
    "Teams",
    new AjaxOptions
    {
        InsertionMode = InsertionMode.ReplaceWith,
        HttpMethod = "GET",
        LoadingElementId = "ajax-loader",
        UpdateTargetId = "teamsList"
    }))
{
    <div style="display: inline-block; float: left; margin: 0px 30px;">
        <img id="ajax-loader" src="~/Content/Images/ajax-loader.gif" style="display:none" />
        <div class="form-group" style="display: flex; align-items: center;">
            <select class="form-control" name="group"style="display: inline-block; width: 80px; margin: 0 10px;">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
                <option value="H">H</option>
            </select>
            <br />
            <input type="submit" value="By group" class="btn btn-outline-primary" style="display: inline-block; margin: 0 10px;" />
        </div>
    </div>
}
